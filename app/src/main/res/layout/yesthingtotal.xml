<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/background_image"
              tools:ignore="MissingDefaultResource">

    <TextView android:id="@+id/title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp"
              android:layout_gravity="center_horizontal"
              android:text="@string/addTitleFour"
              android:textColor="@color/black"
              android:textSize="30dp"
    />
    <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:background="@drawable/list_draw"
            android:layout_gravity="center_horizontal"
    >
        <TextView
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="@string/lookDate"
                android:textSize="15dp"
                android:textColor="@color/black"
        />
        <EditText
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:id="@+id/lookDate"
                android:textSize="15dp"
                android:hint="-默认当月-"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/edit_draw"
                android:layout_marginLeft="5dp"
        />
        <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="@string/sum"
                android:textSize="15dp"
                android:textColor="@color/black"
        />
        <EditText
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/sum"
                android:textSize="15dp"
                android:inputType="none"
                android:focusable="false"
                android:hint="0.00"
                android:focusableInTouchMode="false"
                android:background="@drawable/edit_draw"
                android:layout_marginLeft="5dp"
        />
        <Button
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:text="+"
                android:textSize="20dp"
                android:id="@+id/reset"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:background="@drawable/ok_button_draw"
                android:foreground="@drawable/ripple"
        />
    </LinearLayout>
    <ListView
            android:id="@+id/YesThingShow"
            android:layout_width="380dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:footerDividersEnabled="false"
            android:divider="@null"
    />
</LinearLayout>